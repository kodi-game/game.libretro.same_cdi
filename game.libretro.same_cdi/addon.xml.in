<?xml version="1.0" encoding="UTF-8"?>
<addon id="game.libretro.same_cdi"
		name="Philips - CDi (SAME CDi)"
		version="0.239.0.5"
		provider-name="MAMEdev">
	<requires>
		<import addon="game.libretro" version="1.0.0"/>
	</requires>
	<extension point="kodi.gameclient"
			library_@PLATFORM@="@LIBRARY_FILENAME@">
		<platforms></platforms>
		<extensions>chd|iso|cue</extensions>
		<supports_vfs>false</supports_vfs>
		<supports_standalone>false</supports_standalone>
		<requires_opengl>false</requires_opengl>
	</extension>
	<extension point="xbmc.addon.metadata">
		<license>GPLv2+</license>
		<platform>@PLATFORM@</platform>
		<source>https://github.com/kodi-game/game.libretro.same_cdi</source>
		<assets>
			<icon>resources/icon.png</icon>
		</assets>
		<summary lang="en_GB">Philips - CDi (SAME CDi)</summary>
		<description lang="da_DK">Same_CDI er en libretro-kerne til at spille CD-I-spil. Dette er en fork og ændring af Mame Libretro Core.</description>
		<description lang="de_DE">SAME_CDI ist ein libretro-Core zum Spielen von CD-i-Spielen. Dies ist ein Fork und eine Modifikation von MAME libretro core.</description>
		<description lang="en_GB">SAME_CDI is a libretro core to play CD-i games. This is a fork and modification of the MAME libretro core.</description>
		<description lang="es_ES">SAME_CDI es un núcleo libretro para reproducir juegos CD-i. Se trata de una bifurcación y modificación del núcleo libretro MAME.</description>
		<description lang="fr_FR">SAME_CDI est un noyau libretro pour jouer à des jeux CD-i. Il s&apos;agit d&apos;un fork et d&apos;une modification du noyau MAME libretro.</description>
	</extension>
</addon>
